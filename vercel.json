{
  "buildCommand": "npm run build",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/chat.js", "use": "@vercel/node" },
    { "src": "api/chat/cannot-answer.js", "use": "@vercel/node" },
    { "src": "api/chat/question-feedback.js", "use": "@vercel/node" },
    { "src": "api/contact.js", "use": "@vercel/node" },
    { "src": "api/handoff.js", "use": "@vercel/node" },
    { "src": "api/knowledge/index.js", "use": "@vercel/node" },
    { "src": "api/ali/apply.js", "use": "@vercel/node" },
        { "src": "api/journal/subscribe.js", "use": "@vercel/node" },
        { "src": "api/journal/notify.js", "use": "@vercel/node" },
        { "src": "api/journal/retry-failed-emails.js", "use": "@vercel/node" },
        { "src": "api/journal/check-subscription.js", "use": "@vercel/node" },
        { "src": "api/cron/daily-devotional-notify.js", "use": "@vercel/node" },
        { "src": "api/cron/retry-failed-emails.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/api/chat/cannot-answer", "dest": "/api/chat/cannot-answer.js" },
    { "src": "/api/chat/question-feedback", "dest": "/api/chat/question-feedback.js" },
    { "src": "/api/contact", "dest": "/api/contact.js" },
    { "src": "/api/handoff", "dest": "/api/handoff.js" },
    { "src": "/api/knowledge", "dest": "/api/knowledge/index.js" },
    { "src": "/api/ali/apply", "dest": "/api/ali/apply.js" },
        { "src": "/api/journal/subscribe", "dest": "/api/journal/subscribe.js" },
        { "src": "/api/journal/notify", "dest": "/api/journal/notify.js" },
        { "src": "/api/journal/retry-failed-emails", "dest": "/api/journal/retry-failed-emails.js" },
        { "src": "/api/journal/check-subscription", "dest": "/api/journal/check-subscription.js" },
        { "src": "/api/cron/daily-devotional-notify", "dest": "/api/cron/daily-devotional-notify.js" },
        { "src": "/api/cron/retry-failed-emails", "dest": "/api/cron/retry-failed-emails.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-devotional-notify",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/retry-failed-emails",
      "schedule": "0 */6 * * *"
    }
  ]
}
